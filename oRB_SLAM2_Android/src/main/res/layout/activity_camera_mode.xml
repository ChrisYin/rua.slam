<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/choose_calibration"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dip"
            android:text="Calibration File"
            android:background="@drawable/bt"
            android:textSize="20sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/cal_path_txt"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="Default Path : /SLAM/List3.yaml"
            android:textSize="15sp"
            android:textColor="#ff0000"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/finish"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dip"
            android:text="Start SLAM"
            android:background="@drawable/bt"
            android:textSize="20sp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="Start ORBSLAM"
            android:textSize="15sp"
            android:textColor="#ff0000"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Robot Navigation Project"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp" />

</LinearLayout>